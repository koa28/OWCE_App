<?xml version="1.0" encoding="UTF-8"?>
<rgpopup:PopupPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OWCE.Pages.Popup.DebugBoardListPageSettingPopup"
    xmlns:rgpopup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:rgpopupanimation="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup">

    <rgpopup:PopupPage.Animation>
        <rgpopupanimation:ScaleAnimation 
            PositionIn="Bottom"
            PositionOut="Bottom"
            DurationIn="200"
            DurationOut="200"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </rgpopup:PopupPage.Animation>

    <Grid BackgroundColor="White" ColumnSpacing="0" RowSpacing="0" VerticalOptions="End" RowDefinitions="Auto,1">

        <Label Grid.Row="0" Text="Debug Menu" TextColor="Black" FontFamily="SairaExtraCondensed-SemiBold" FontSize="24" Padding="16,20" />

        <BoxView Grid.Row="1" Background="#E4E4E4" HeightRequest="1" />



    </Grid>
</rgpopup:PopupPage>
